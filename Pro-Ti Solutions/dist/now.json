{
    "version": 2,
    "name": "php-api",
    "scope": "trainit",
    "builds": [
        { "src": "index.html", "use": "@now/static" },
        { "src": "/assets/img/*", "use": "@now/static" },
        { "src": "/js/*", "use": "@now/static" },
        { "src": "/css/*", "use": "@now/static" },
        { "src": "/api/*.php", "use": "@now/php" }
    ],
    "routes": [
        { "src": "/(.*)",  "dest": "/api/index.php" }
    ]
}
